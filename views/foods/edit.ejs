<html lang="en">
<%- include("../partials/header.ejs") %>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/edit.css"> 
</head>  

<body>
  <%- include("../partials/nav.ejs") %>
  <div class="edit-page">
  <div class="editform">
    <form action="/update/<%= food._id %>"  method="POST" enctype="multipart/form-data">
      <div class="price">
      <label for="price">Food price:</label>
      <input type="number" id="price" name="price" value="<%= food.price %>">
      </div>
      <div class="title">
      <label for="title">Food title:</label>
      <input type="text" id="title" name="title" value="<%= food.title %>">
      </div>
      <div class="ingredient">
      <label for="ingredient">Food ingredient:</label>
      <textarea id="ingredient" name="ingredient"><%= food.ingredient %></textarea>
      </div>
      <div class="image">
      <label for="image">Food image</label>
      <input type="file" id="image" name="image">
      <img src="/<%= food.image %>" width="100" height="100">
      <input type="hidden" name="oldImage" value="<%= food.image %>">
      </div>
      <button class="updateBtn">Update</button>
    </form>
  </div>
  <%- include("../partials/footer.ejs") %>
</div>
</body>
</html>